{
  "application": {
    "name": "kolumn-demo",
    "version": "1.0.0",
    "environment": "${input.environment}",
    "region": "${input.region}",
    "deployed_at": "${var.current_timestamp}"
  },
  "infrastructure": {
    "region": "${input.region}",
    "availability_zones": ["${input.region}a", "${input.region}b", "${input.region}c"],
    "vpc": {
      "cidr": "10.0.0.0/16",
      "enable_dns": true,
      "enable_dns_hostnames": true
    }
  },
  "defaults": {
    "timeout": "30s",
    "retry_attempts": 3,
    "backup_retention": "7d",
    "monitoring": true,
    "logging": {
      "level": "info",
      "format": "json"
    }
  },
  "security": {
    "encryption": {
      "at_rest": true,
      "in_transit": true,
      "algorithm": "AES-256"
    },
    "access_control": {
      "rbac_enabled": true,
      "mfa_required": true,
      "session_timeout": "8h"
    }
  }
}